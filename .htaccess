# Enable URL rewriting
RewriteEngine On

# Prevent access to sensitive files
<Files "db.php">
    Order Allow,Deny
    Deny from all
</Files>

<Files "*.sql">
    Order Allow,Deny
    Deny from all
</Files>

<Files ".htaccess">
    Order Allow,Deny
    Deny from all
</Files>

# Set default charset
AddDefaultCharset UTF-8

# Error documents
ErrorDocument 404 /index.php
ErrorDocument 403 /index.php
